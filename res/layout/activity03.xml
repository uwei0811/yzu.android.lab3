<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_03"
    tools:context="${relativePackage}.${activityClass}" >

    <ImageButton
        android:id="@+id/level1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="100dp"
        android:background="@null"
        android:src="@drawable/hd01" />

    <ImageButton
        android:id="@+id/level2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/level1"
        android:layout_below="@+id/level1"
        android:layout_marginTop="100dp"
        android:background="@null"
        android:src="@drawable/hd02" />

    <ImageButton
        android:id="@+id/level3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/level2"
        android:layout_below="@+id/level2"
        android:layout_marginTop="100dp"
        android:background="@null"
        android:src="@drawable/hd03" />
    
</RelativeLayout>
